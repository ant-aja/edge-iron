{
  "name": "@wunderwerk/edge-iron",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "ava": {
    "files": [
      "tests/**/*.test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader",
      "ts-node/esm"
    ]
  },
  "scripts": {
    "test": "NODE_NO_WARNINGS=1 ava",
    "typecheck": "tsc --project ./tsconfig.json"
  },
  "devDependencies": {
    "@swc/core": "^1.3.72",
    "@types/node": "^20.4.5",
    "ava": "^5.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@wunderwerk/edge-crypto": "1.0.0-alpha.1"
  }
}
